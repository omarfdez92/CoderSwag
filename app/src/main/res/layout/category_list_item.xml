<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="166dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp" app:srcCompat="@drawable/hatimage"
            android:id="@+id/categoryimage"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="HATS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoryname"
            app:layout_constraintTop_toTopOf="@+id/categoryimage" app:layout_constraintEnd_toEndOf="@+id/categoryimage"
            app:layout_constraintStart_toStartOf="@+id/categoryimage" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/categoryimage"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp" android:textColor="#fff"
            android:textSize="24sp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>